@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!--vygenerovane VS ale view bol upravovany a kontroler som nemenil-->
@section styles {
    <!-- Additional CSS for this view -->
    <link href="~/css/UploadGameStyle.css" rel="stylesheet" />
}

<div class="row">
    <div class="col-2 d-none d-md-block secondaryBackground"></div>
    <div class="col-12 col-md-6 primaryBackground">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mt-3">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="row mb-3">
                <div class="col-auto">
                    <label asp-for="Input.Email" class="form-label">Email:</label>
                </div>
                <div class="col">
                    <input asp-for="Input.Email" class="form-control customForm" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <div class="col-auto">
                    <label asp-for="Input.Password" class="form-label">Password:</label>
                </div>
                <div class="col">
                    <input asp-for="Input.Password" class="form-control customForm" autocomplete="new-password" aria-required="true" placeholder="password" />
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <div class="col-auto">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password:</label>
                </div>
                <div class="col">
                    <input asp-for="Input.ConfirmPassword" class="form-control customForm" autocomplete="current-password" aria-required="true" placeholder="password" />
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 customButton">Register</button>
        </form>
    </div>
    <div class="col-4 d-none d-md-block secondaryBackground"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
